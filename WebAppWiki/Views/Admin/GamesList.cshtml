@model IEnumerable<WebAppWiki.Domains.Game>

@{
    ViewData["Title"] = "Управление играми";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Управление играми</h1>
        <a asp-action="CreateGameView" class="btn btn-primary">Создать новую игру</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="text-light">
                <tr>
                    <th>ID</th>
                    <th>Название</th>
                    <th>Описание</th>
                    <th>Жанр</th>
                    <th>Рейтинг</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model)
                {
                    <tr class="text-light">
                        <td>@game.GameId</td>
                        <td>@game.Title</td>
                        <td>@(game.Description?.Length > 100 ? game.Description.Substring(0, 100) + "..." : game.Description)</td>
                        <td>@game.Genre?.Name</td>
                        <td>@game.Rating?.Score</td>
                        <td>
                            <div class="btn-group">
                                <a asp-controller="Games" asp-action="Details" asp-route-id="@game.GameId" class="btn btn-sm btn-outline-info">Просмотр</a>
                                <a asp-action="GameEditView" asp-route-id="@game.GameId" class="btn btn-sm btn-outline-warning">Редактировать</a>
                                <form asp-action="DeleteGame" asp-route-id="@game.GameId" method="post" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Вы уверены, что хотите удалить игру @game.Title?')">Удалить</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="form-group mb-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Назад</a>
    </div>
</div> 