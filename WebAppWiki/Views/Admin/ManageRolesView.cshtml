@model IEnumerable<WebAppWiki.Models.RoleSimpleModel>

@{
    ViewData["Title"] = "Управление ролями";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead class="text-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="text-light">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-route-roleId="@item.Id" asp-controller="Admin" asp-action="EditRolesView" class="btn btn-outline-warning">
                    Изменить
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="form-group mb-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Назад</a>
</div>
