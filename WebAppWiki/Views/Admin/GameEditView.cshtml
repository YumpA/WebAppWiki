@using WebAppWiki.Authorize
@model WebAppWiki.Models.GameEditModel

@{
    ViewData["Title"] = Model.GameId == 0 ? "Добавить игру" : "Редактировать игру";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form enctype="multipart/form-data" method="post" asp-controller="Admin" asp-action="GameEditView">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
            <input type="hidden" name="Setting" value="@Model.Setting" />

            <div class="form-group mb-3">
                <label asp-for="GameId" class="control-label"></label>
                <input readonly asp-for="GameId" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Plot" class="control-label"></label>
                <textarea asp-for="Plot" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Plot" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Rating" class="control-label"></label>
                <textarea asp-for="Rating.Score" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Rating.Score" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Жанр:</label>
                <select name="SelectedGenreId" class="form-select">
                    @foreach (var item in Model.GenresList)
                    {
                        if (item.Selected)
                        {
                            <option value="@item.Value" selected>@item.Text</option>
                        }
                        else
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    }
                </select>
            </div>

            <div class="col-6">
                <div class="form-group">
                    <img id="ShowImage"
                         width="400"
                         src="~/@Model.ImgSrc" />
                </div>
                <div class="form-group">
                    <label asp-for="ImgUrl" class="control-label"></label>
                    <input readonly asp-for="ImgUrl" class="form-control" />
                </div>
                <input type="file"
                       data-val="false"
                       asp-for="FileImage"
                       accept="image/*" />
            </div>

            <div class="form-group mb-3 mt-2">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="GamesList" class="btn btn-secondary">Назад к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $('#FileImage').change(function () {
            LoadImage(this);
        });

        function LoadImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#ShowImage').attr('src', e.target.result)
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
