@model IEnumerable<WebAppWiki.Domains.Charachters>

@{
    ViewData["Title"] = "Управление персонажами";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewBag.Title</h1>
        <a asp-action="CreateCharachtersView" class="btn btn-primary">Создать нового персонажа</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="text-light">
                    <th>ID</th>
                    <th>Название</th>                
                </tr>
            </thead>
            <tbody>
                @foreach (var Charachters in Model)
                {
                    <tr class="text-light">
                        <td>@Charachters.CharachtersId</td>
                        <td>@Charachters.Name</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="EditCharachtersView" asp-route-id="@Charachters.CharachtersId" class="btn btn-sm btn-outline-warning">Редактировать</a>
                                <form asp-action="DeleteCharachters" asp-route-id="@Charachters.CharachtersId" method="post" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Вы уверены, что хотите удалить @Charachters.Name?')">Удалить</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="form-group mb-3">
        <a asp-action="ManageContentView" class="btn btn-outline-secondary">Назад</a>
    </div>
</div>
