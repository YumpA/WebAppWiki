@model WebAppWiki.Models.GameEditModel

@{
    ViewData["Title"] = Model.GameId == 0 ? "Создание игры" : "Редактирование игры";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GameId" />

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Plot" class="control-label"></label>
                <textarea asp-for="Plot" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Plot" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SelectedGenreId" class="control-label">Жанр</label>
                <select asp-for="SelectedGenreId" asp-items="Model.GenresList" class="form-select">
                    <option value="">-- Выберите жанр --</option>
                </select>
                <span asp-validation-for="SelectedGenreId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FileImage" class="control-label"></label>
                <input asp-for="FileImage" class="form-control" type="file" accept="image/*" />
                <span asp-validation-for="FileImage" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImgUrl" class="control-label"></label>
                <input asp-for="ImgUrl" class="form-control" />
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImgUrl))
        {
            <div class="card">
                <img src="@Model.ImgSrc" class="card-img-top" alt="Текущее изображение">
                <div class="card-body">
                    <p class="card-text">Текущее изображение</p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 