@model WebAppWiki.Models.FractionEditModel

@{
    ViewData["Title"] = Model.FractionsId == 0 ? "Добавить фракцию" : "Редактировать фракцию";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditFractionsView">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FractionsId" class="control-label"></label>
                <input readonly asp-for="FractionsId" class="form-control" />
                <span asp-validation-for="FractionsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label>Выберите игру</label>
                <select name="SelectedGameId" class="form-select">
                    @foreach (var item in Model.ListOfGames)
                    {
                        if (item.Selected)
                        {
                            <option value="@item.Value" selected>@item.Text</option>
                        }
                        else
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    }
                </select>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="form-group mb-3 mt-2">
    <a asp-action="GenreList" class="btn btn-secondary">Назад к списку</a>
</div>

